require("手入_库")

function EnterHospital()
    repeat
        Base.ClickRectEx(907,270,80,30)
        Base.Sleep(1000)
    until Hospital_IsColorAll()
    Win.Print("进入手入画面")
end

function EnterBed(n)
    msg = "检查手入室番号 %d 是否有刀"
    Win.Print(msg:format(n))
    Base.Sleep(1000)
    if Bed_IsEmpty(n) then
        msg = " %d 号手入室空闲"
        Win.Print(msg:format(n))

        repeat
            y = 136+(n-1)*121
            Base.ClickRectEx(451,y,600,80)
            Base.Sleep(1000)
        until InBed_isColorAll()

        Win.Print("进入手入室")
        return true
    else
        return false
    end
end

function CheckSwordN(n)
    Base.Sleep(1000)
    repeat
        y = 118+(n-1)*77
        Base.ClickRectEx(454,y,20,20)
        Base.Sleep(1000)
    until SelectedSword_IsColorAll()
    Win.Print("检查是否需要手入")
    return CurrentSwordHealable()
end

function SetInstaHeal()
    Win.Print("使用加速")
    Base.ClickRectEx(670,392,100,8)
    Base.Sleep(1000)
    Base.ClickRectEx(670,413,100,8)
    Base.Sleep(1000)
end

function StartHeal()
    Win.Print("开始手入")
    Base.Sleep(1000)
    repeat
        Base.ClickRectEx(635,490,150,30)
        Base.Sleep(1000)
    until Hospital_IsColorAll()
    --Win.Print("返回手入画面")
end

function ReturnHeal()
    Win.Print("没有需要手入的刀")
    Base.Sleep(1000)
    repeat
        Base.ClickRectEx(730,66,35,10)
        Base.Sleep(1000)
    until Hospital_IsColorAll()
    --Win.Print("返回手入画面")
end

